<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:icon="@android:drawable/ic_lock_lock"
        android:label="@string/app_name"
        android:roundIcon="@android:drawable/ic_lock_lock"
        android:supportsRtl="true"
        android:theme="@style/Theme.PGPDecryptNative"
        tools:targetApi="31">
        
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
            <!-- Intent Filter dla wiadomoÅ›ci PGP - gdy uÅ¼ytkownik dzieli siÄ™ tekstem -->
            <!-- UÅ¼ywamy android:label Å¼eby pokazaÄ‡ czytelnÄ… nazwÄ™ w menu -->
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain" />
            </intent-filter>
            
            <!-- Alternatywny Intent Filter bez MIME type - dla aplikacji ktÃ³re nie podajÄ… typu -->
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.SEND" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            
            <!-- Intent Filter dla wiadomoÅ›ci PGP - gdy uÅ¼ytkownik otwiera tekst -->
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:mimeType="text/plain" />
            </intent-filter>
            
            <!-- Intent Filter dla content:// URI -->
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="content" />
                <data android:mimeType="text/plain" />
            </intent-filter>
            
            <!-- Intent Filter dla file:// URI -->
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="file" />
                <data android:mimeType="text/plain" />
            </intent-filter>
            
            <!-- ACTION_PROCESS_TEXT - pojawia siÄ™ w menu kontekstowym gdy zaznaczasz tekst -->
            <!-- To jest to, czego potrzebujesz! Gdy zaznaczasz tekst PGP, pojawi siÄ™ opcja "ðŸ”“ Odszyfruj" -->
            <!-- Podobnie jak "ZadzwoÅ„" przy numerze telefonu, "ðŸ”“ Odszyfruj" pojawi siÄ™ przy zaznaczonym tekÅ›cie PGP -->
            <!-- android:priority="1000" - maksymalny priorytet, aby opcja pojawiaÅ‚a siÄ™ jako pierwsza (moÅ¼e nie dziaÅ‚aÄ‡ na wszystkich urzÄ…dzeniach) -->
            <!-- android:icon - uÅ¼ywamy ikony aplikacji (jak Dialer i WhatsApp uÅ¼ywajÄ… swoich ikon) -->
            <!-- SprÃ³bujmy uÅ¼yÄ‡ ikony aplikacji - Android powinien uÅ¼yÄ‡ ikony z android:icon w <application> -->
            <intent-filter 
                android:label="@string/process_text_label"
                android:priority="1000">
                <action android:name="android.intent.action.PROCESS_TEXT" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="text/plain" />
            </intent-filter>
        </activity>
    </application>

</manifest>


